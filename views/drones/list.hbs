<div class="container-list">

    <h2>Available Drones</h2>

    <hr>

    <ul>
        {{#each drones}}
        <li class="drone-list">
            <h4>{{name}}</h4>
            <p>Propellers: {{propellers}}</p>
            <p>Maximum Speed: {{maxSpeed}}</p>
            <a href="/drones/{{_id}}/edit" class="btn btn-sm btn-dark">Edit</a>
            <form action="/drones/{{_id}}/delete" method="POST">
                <button class="btn btn-sm btn-warning" type="submit">Delete</button>
            </form>
        </li>
        {{/each}}
    </ul>



    <a href="/" class="btn btn-dark">Back to Home page</a>

</div>